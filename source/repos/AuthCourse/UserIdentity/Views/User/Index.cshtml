@model IEnumerable<UserIdentity.Entities.ApplicationUser>

<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <img src="~/Photos/@user.PhotoUrl" alt="User Photo" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a asp-action="AddRole" asp-route-userId="@user.Id" class="btn btn-primary">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>